<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.eci.cvds.sampleprj.dao.mybatis.mappers.TipoItemMapper">
    <select parameterType="map" id="getTiposItems" resultMap="TipoItemResult"> 
        select id as tipoid, descripcion from VI_TIPOITEM
    </select>
    
     <select parameterType="map" id="getTipoItem" resultMap="TipoItemResult">
	SELECT * FROM VI_TIPOITEM
		WHERE id=#{id}
    </select>
    
    <insert parameterType="TipoItem" id="addTipoItem" >
	INSERT INTO VI_TIPOITEM (descripcion)
		VALUES (#{descripcion})
    </insert>
    
     <resultMap type='TipoItem' id='TipoItemResult'>
        <id property='id' column='tipoid'/>
        <result property='descripcion' column='tipodescripcion'/>              
    </resultMap>
    

                
</mapper>